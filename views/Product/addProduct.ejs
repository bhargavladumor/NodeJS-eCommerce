<%- include("../header.ejs") %>

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Add Product</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item">Admin</li>
          <li class="breadcrumb-item">Product</li>
          <li class="breadcrumb-item active">Add Product</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-10">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Add Product Details</h5>

              <!-- General Form Elements -->

              <form action="/admin/product/insertProduct" method="post" enctype="multipart/form-data"
                class="form-horizontal">

                <div class="row form-group my-3 ">
                  <div class="col col-md-3 ">
                    <label for="text-input" class="form-control-label">Select Category </label>
                  </div>
                  <div class="col-12 col-md-9">
                    <select name="categoryId" id="categoryId" onchange="return getSubCatData()" class="form-control">
                      <option value="">--- Select  ---</option>
                      <% categories.map((v)=>{ %>
                        <option value="<%= v.id %>">
                          <%= v.category_name %>
                        </option>
                        <% }) %>
                    </select>
                  </div>
                </div>

                <div class="row form-group my-3 ">
                  <div class="col col-md-3 ">
                    <label for="text-input" class="form-control-label">Select Sub Category </label>
                  </div>
                  <div class="col-12 col-md-9">
                    <select name="subCategoryId" id="subCategoryId" onchange="return getExCatData()"
                      class="form-control">
                      <option value="">--- Select ---</option>
                    </select>
                  </div>
                </div>

                <div class="row form-group my-3 ">
                  <div class="col col-md-3 ">
                    <label for="text-input" class="form-control-label">Select Extra Category </label>
                  </div>
                  <div class="col-12 col-md-9">
                    <select name="exCategoryId" id="exCategoryId" onchange="return getBrandAndType()"
                      class="form-control">
                      <option value="">--- Select ---</option>
                    </select>
                  </div>
                </div>

                <div class="row form-group my-3 ">
                  <div class="col col-md-3 ">
                    <label for="text-input" class="form-control-label">Select Brand </label>
                  </div>
                  <div class="col-12 col-md-9">
                    <select name="brandId" id="brandId" class="form-control">
                      <option value="">--- Select ---</option>
                    </select>
                  </div>
                </div>

                <div class="row form-group my-3 ">
                  <div class="col col-md-3 ">
                    <label for="text-input" class="form-control-label">Select Type </label>
                  </div>
                  <div class="col-12 col-md-9">
                    <select name="typeId" id="typeId" class="form-control">
                      <option value="">--- Select ---</option>
                    </select>
                  </div>
                </div>

                <div class="row form-group my-3 ">
                  <div class="col col-md-3">
                    <label for="text-input" class=" form-control-label">Enter Title </label>
                  </div>
                  <div class="col-12 col-md-9">
                    <input type="text" id="text-input" name="title" placeholder="Enter Product" class="form-control">
                  </div>
                </div>

                <div class="row form-group my-3 ">
                  <div class="col col-md-3">
                    <label for="text-input" class=" form-control-label">Enter Price </label>
                  </div>
                  <div class="col-12 col-md-9">
                    <input type="text" id="text-input" name="price" placeholder="Enter Price" class="form-control">
                  </div>
                </div>

                <div class="row form-group my-3 ">
                  <div class="col col-md-3">
                    <label for="text-input" class=" form-control-label">Enter Old Price </label>
                  </div>
                  <div class="col-12 col-md-9">
                    <input type="text" id="text-input" name="oldPrice" placeholder="Enter Old Price"
                      class="form-control">
                  </div>
                </div>

                <div class="row form-group my-3 ">
                  <div class="col col-md-3">
                    <label for="text-input" class=" form-control-label">Enter Description </label>
                  </div>
                  <div class="col-12 col-md-9">
                    <input type="text" id="text-input" name="desc" placeholder="Enter Description" class="form-control">
                  </div>
                </div>

                <div class="row form-group my-3 ">
                  <div class="col col-md-3">
                    <label for="text-input" class=" form-control-label">Select Colours </label>
                  </div>
                  <div class="col-12 col-md-9 position-relative" id="colorBox">
                    <input type="color" name="colors" class="form-control" style="width: 100px !important;">
                    <div class="position-absolute top-0" style="left: 20% !important;">
                      <div id="addColorBtn" class="border border-3 border-secondary d-flex align-items-center justify-content-center rounded-circle" onclick="addColors()" style="height: 35px; width: 35px; cursor: pointer;">+</div>
                    </div>
                  </div>
                </div>

                <div class="row form-group my-3 ">
                  <div class="col col-md-3">
                    <label for="text-input" class=" form-control-label">Enter Sizes </label>
                  </div>
                  <div class="col-12 col-md-9 position-relative" id="sizesBox">
                    <input type="text" name="sizes" placeholder="Enter Size" class="form-control w-50">
                    <div class="position-absolute top-0 end-50">
                      <div id="addSizeBtn" class="border border-3 border-secondary d-flex align-items-center justify-content-center rounded-circle" onclick="addSizes()" style="height: 35px; width: 35px; cursor: pointer;">+</div>
                    </div>
                  </div>
                </div>

                <div class="row form-group my-3 ">
                  <div class="col col-md-3">
                    <label for="file-input" class=" form-control-label">Upload Primary Image</label>
                  </div>
                  <div class="col-12 col-md-9">
                    <input type="file" id="file-input" name="pri_image" class="form-control-file">
                  </div>
                </div>

                <div class="row form-group my-3 ">
                  <div class="col col-md-3">
                    <label for="file-input" class=" form-control-label">Upload Multiple Image</label>
                  </div>
                  <div class="col-12 col-md-9">
                    <input type="file" id="file-input" name="multi_image" class="form-control-file" multiple>
                  </div>
                </div>

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-dot-circle-o"></i> Submit
                  </button>
                </div>
              </form>

              <!-- End General Form Elements -->

            </div>
          </div>

        </div>

      </div>
    </section>

  </main>

  <%- include("../footer.ejs") %>