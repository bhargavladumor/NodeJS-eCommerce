<%- include("header") %>

<main id="main" class="main">

    <div class="pagetitle">
      <h1>Profile</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item">Admin</li>
          <li class="breadcrumb-item active">Profile</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section profile">
      <div class="row">
        <div class="col-xl-4">

          <div class="card">
            <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

              <img src="<%= adminData.adminImage %>" height="120px" width="120px" alt="Profile" class="rounded-circle">
              <h2><%= adminData.name %></h2>
              <div class="social-links mt-2">
                <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
              </div>
            </div>
          </div>

        </div>

        <div class="col-xl-8">

          <div class="card">
            <div class="card-body pt-3">
              <!-- Bordered Tabs -->
              <ul class="nav nav-tabs nav-tabs-bordered">

                <li class="nav-item">
                  <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Overview</button>
                </li>

                <li class="nav-item">
                  <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Edit Profile</button>
                </li>

                <li class="nav-item">
                  <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-change-password">Change Password</button>
                </li>

              </ul>
              <div class="tab-content pt-2">

                <div class="tab-pane fade show active profile-overview" id="profile-overview">
                  <h5 class="card-title">About</h5>
                  <p class="small fst-italic"><%= adminData.description %></p>

                  <h5 class="card-title">Profile Details</h5>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label ">Full Name</div>
                    <div class="col-lg-9 col-md-8"><%= adminData.name %></div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Email</div>
                    <div class="col-lg-9 col-md-8"><%= adminData.email %></div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Gender</div>
                    <div class="col-lg-9 col-md-8"><%= adminData.gender %></div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Hobby</div>
                    <div class="col-lg-9 col-md-8"><%= adminData.hobby %></div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">City</div>
                    <div class="col-lg-9 col-md-8"><%= adminData.city %></div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Joined Date</div>
                    <div class="col-lg-9 col-md-8"><%= adminData.createdDate %></div>
                  </div>

                </div>

                <div class="tab-pane fade profile-edit pt-3" id="profile-edit">

                  <!-- Profile Edit Form -->
                  <form method="post" action="/admin/updateProfile" enctype="multipart/form-data">
                    <input type="hidden" name="oldId" value="<%= adminData.id %>">
                    <div class="row mb-3">
                      <label for="profileImage" class="col-md-4 col-lg-3 col-form-label">Profile Image</label>
                      <div class="col-md-8 col-lg-9">
                        <img src="<%= adminData.adminImage %>" alt="Profile">
                        <div class="pt-2">
                          <input type="file" name="adminImage" class="form-control">
                        </div>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Full Name</label>
                      <div class="col-md-8 col-lg-9">
                        <input name="name" type="text" class="form-control" id="fullName" value="<%= adminData.name %>">
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="about" class="col-md-4 col-lg-3 col-form-label">About</label>
                      <div class="col-md-8 col-lg-9">
                        <textarea name="description" class="form-control" id="about" style="height: 100px"><%= adminData.description %></textarea>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="company" class="col-md-4 col-lg-3 col-form-label">Email</label>
                      <div class="col-md-8 col-lg-9">
                        <input name="email" type="email" class="form-control" id="company" value="<%= adminData.email %>">
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="Job" class="col-md-4 col-lg-3 col-form-label">Gender</label>
                      <div class="col-md-8 col-lg-9">
                        <div class="form-check-inline form-check">
                            <label for="inline-radio1" class="form-check-label ">
                                <input type="radio" id="inline-radio1" name="gender" value="male" <% if(adminData.gender == "male"){ %> <%= "checked" %> <% } %> class="form-check-input" /> Male
                            </label>&nbsp;&nbsp;&nbsp;
                            <label for="inline-radio2" class="form-check-label ms-3">
                                <input type="radio" id="inline-radio2" name="gender" value="female" <% if(adminData.gender == "female"){ %> <%= "checked" %> <% } %> class="form-check-input">Female
                            </label>
                        </div>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="Country" class="col-md-4 col-lg-3 col-form-label">Hobby</label>
                      <div class="col-md-8 col-lg-9">
                        <div class="form-check-inline form-check">
                            <label for="inline-checkbox1" class="form-check-label ">
                                <input type="checkbox" id="inline-checkbox1" name="hobby" <% if(adminData.hobby.includes("Coding")) { %> <%= "checked" %> <% } %> value="Coding" class="form-check-input">Coding
                            </label>&nbsp;&nbsp;&nbsp;
                            <label for="inline-checkbox2" class="form-check-label ms-3">
                                <input type="checkbox" id="inline-checkbox2" name="hobby" <% if(adminData.hobby.includes("Gaming")) { %> <%= "checked" %> <% } %> value="Gaming" class="form-check-input">Gaming
                            </label>&nbsp;&nbsp;&nbsp;
                            <label for="inline-checkbox3" class="form-check-label ms-3">
                                <input type="checkbox" id="inline-checkbox3" name="hobby" <% if(adminData.hobby.includes("Reading")) { %> <%= "checked" %> <% } %> value="Reading" class="form-check-input">Reading
                            </label>
                        </div>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="Address" class="col-md-4 col-lg-3 col-form-label">City</label>
                      <div class="col-md-8 col-lg-9">
                        <select name="city" id="select" class="form-control">
                            <option value="">Please select</option>
                            <option value="Surat" <% if(adminData.city == "Surat") { %> <%= 'selected' %> <% } %> >Surat</option>
                            <option value="Vadodara" <% if(adminData.city == "Vadodara") { %> <%= 'selected' %> <% } %> >Vadodara</option>
                            <option value="Bhavnagar" <% if(adminData.city == "Bhavnagar") { %> <%= 'selected' %> <% } %> >Bhavnagar</option>
                        </select>
                      </div>
                    </div>

                    <div class="text-center">
                      <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                  </form><!-- End Profile Edit Form -->

                </div>

                <div class="tab-pane fade pt-3" id="profile-change-password">
                  <!-- Change Password Form -->
                  <form method="post" action="/admin/editPassword">

                    <div class="row mb-3">
                      <label for="currentPassword" class="col-md-4 col-lg-3 col-form-label">Current Password</label>
                      <div class="col-md-8 col-lg-9">
                        <input name="cpass" type="password" class="form-control" id="currentPassword">
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="newPassword" class="col-md-4 col-lg-3 col-form-label">New Password</label>
                      <div class="col-md-8 col-lg-9">
                        <input name="npass" type="password" class="form-control" id="newPassword">
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="renewPassword" class="col-md-4 col-lg-3 col-form-label">Re-enter New Password</label>
                      <div class="col-md-8 col-lg-9">
                        <input name="cmpass" type="password" class="form-control" id="renewPassword">
                      </div>
                    </div>

                    <div class="text-center">
                      <button type="submit" class="btn btn-primary">Change Password</button>
                    </div>
                  </form><!-- End Change Password Form -->

                </div>

              </div><!-- End Bordered Tabs -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main>


  <%- include("footer") %>